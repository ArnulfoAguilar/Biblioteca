CREATE 
	OR REPLACE VIEW comentariosLikes AS SELECT
	c1."id",
	c1."COMENTARIO",
	c1."HABILITADO",
	c1."ID_APORTE",
	c1."ID_USUARIO",
	c1.created_at,
	( 
	SELECT COUNT ( ic."id" ) FROM "interaccionComentario" ic WHERE ic."ID_COMENTARIO" = c1."id" AND ic."ID_TIPO_INTERACCION" = 1 ) Total_likes,
(
SELECT u."name" from users u where u."id"=c1."ID_USUARIO"
)	
FROM
	"Comentario" c1