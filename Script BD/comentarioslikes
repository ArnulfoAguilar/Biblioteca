CREATE 
	OR REPLACE VIEW comentariosLikes AS SELECT
	c1.id,
    c1."COMENTARIO",
    c1."HABILITADO",
    c1."ID_APORTE",
    c1."ID_USUARIO",
    c1.created_at,
    ( SELECT count(ic.id) AS count
           FROM "interaccionComentario" ic
          WHERE ((ic."ID_COMENTARIO" = c1.id) AND (ic."ID_TIPO_INTERACCION" = 1))) AS total_likes,
    ( SELECT u.name
           FROM users u
          WHERE (u.id = c1."ID_USUARIO")) AS name
   FROM "Comentario" c1